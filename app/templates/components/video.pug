
include iframe

mixin video(videoType, url)
    if videoType === 'youtube' || videoType === 'tumblr'
        .video-wrapper
            if videoType === 'youtube'
                div(data-plyr-provider='youtube' data-plyr-embed-id=url)
            else
                video(controls=true)
                    source(src=url type='video/mp4')

    else if videoType === 'instagram'
        .instagram-iframe-wrapper
            +iframe(url, 'instagram-iframe')
