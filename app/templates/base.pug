extends abstract.pug

include components/nav-link.pug
include components/answer.pug

block body
    aside.sidebar-column#sidebar
        .navbar#navbar
            header.logo-wrapper
                a(href='/')
                    img.logo.img-responsive(
                        srcset='/assets/images/logo.png 1x, /assets/images/logo-hd.png 2x'
                        alt='Sunforge Cards')

            nav.navigation
                div.navigation-inner
                    +nav-link('http://yt.sunforgecards.com', 'youtube',
                        'YouTube', 'icon-youtube')
                    +nav-link('https://facebook.com/sunforgecards', 'facebook',
                        'Facebook', 'icon-facebook')
                    +nav-link('https://www.instagram.com/sunforgecards', 'instagram',
                        'Instagram', 'icon-instagram')
                    +nav-link('https://pinterest.com/sunforgecards', 'pinterest',
                        'Pinterest', 'icon-pinterest')
                    +nav-link('https://twitter.com/sunforgecards', 'twitter',
                        'Twitter', 'icon-twitter')
                    +nav-link('mailto:contact@sunforgecards.com', 'mail',
                        'Email', 'icon-envelope')
                    +nav-link('/ask', 'ask', 'Ask me', 'icon-question', true)

        unless options.hideAnswers
            .qa.small-text
                header.qa-header
                    h3.pull-left.qa-title= 'Latest Q&A'
                    a.pull-right(href='/ask')= 'Check all'
                    .clearfix

                .qa-content
                    - recent = answers.slice(0, 3)

                    each qaItem in recent
                        +answer(qaItem, moment)

                footer.qa-footer
                    a(href='/ask')= 'View all questions'

    .content-column
        block content

block afterBody
    script(src='/assets/app.js' async=true)